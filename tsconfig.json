{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "challenge_patagonia/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "challenge_patagonia/src",
    "paths": {
      "@/*": ["*"],
      "@/core/*": ["core/*"],
      "@/adapters/*": ["adapters/*"],
      "@/shared/*": ["shared/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": ["challenge_patagonia/src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}